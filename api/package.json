{
  "name": "blog-api-project",
  "private": true,
  "version": "1.0.0",
  "description": "Private blog API",
  "author": "Denis Dezest <denis.dezest@gmail.com>",
  "repository": "git@github.com:ddZ6ii/blog-api-project.git",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev": "vite-node --watch index.ts",
    "dev:start": "concurrently \"vite-node --watch index.ts\" \"vite --host --open\"",
    "start": "cross-env NODE_ENV=production node ./dist/index.es.js",
    "test": "yarn run reset:dev && vitest --pool=forks --typecheck",
    "build": "yarn run format:lint && npx tsc && vite build && yarn run copy:data",
    "preview": "concurrently \"cross-env NODE_ENV=production node ./dist/index.es.js\" \"vite preview --host --open\"",
    "build:preview": "yarn run build && yarn run preview",
    "format": "prettier --write .",
    "lint": "eslint --fix .",
    "format:lint": "yarn run format && yarn run lint",
    "copy:data": "cp -R ./src/data ./dist/data",
    "reset:dev": "cp ./src/data/initialPosts.json ./src/data/posts.json",
    "reset:prod": "cp ./dist/data/initialPosts.json ./dist/data/posts.json",
    "tsc:watch": "tsc -w"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.0.0",
    "magic-string": "^0.30.10",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "prettier-plugin-ejs": "^1.0.3",
    "rollup-plugin-node-externals": "^7.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.10.0",
    "vite": "^5.2.11",
    "vite-node": "^1.6.0",
    "vitest": "^1.5.3"
  }
}
