{
  "name": "blog-api-project",
  "private": true,
  "version": "1.0.0",
  "description": "Blog backend application",
  "author": "Denis Dezest <denis.dezest@gmail.com>",
  "repository": "git@github.com:ddZ6ii/blog-api-project.git",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"sleep 1 && yarn run client\" \"yarn run server\"",
    "server": "vite-node -w app.ts",
    "client": "vite --host --open",
    "build": "yarn run format:lint && npx tsc && vite build && yarn run build:lib && yarn run minify:public && yarn run copy:views && yarn run copy:assets",
    "build:lib": "npx tsc && vite build --config ./src/lib/vite.lib.config.ts",
    "preview": "concurrently \"cross-env NODE_ENV=production node ./dist/app.es.js\" \"vite preview --host --open\"",
    "build:preview": "yarn run build && yarn run preview",
    "format": "prettier --plugin=prettier-plugin-ejs --write .",
    "lint": "eslint --fix .",
    "format:lint": "yarn run format && yarn run lint",
    "minify:public": "yarn run minify:js && yarn run minify:css",
    "minify:js": "esbuild ./public/scripts/*.js --outdir=./dist/public/scripts/ --allow-overwrite --minify",
    "minify:css": "esbuild ./public/styles/*.css --outdir=./dist/public/styles/ --allow-overwrite --minify",
    "copy:views": "cp -R ./src/views ./dist/views",
    "copy:assets": "cp -R ./public/assets ./dist/public/assets",
    "tsc:watch": "npx tsc -w",
    "start": "cross-env NODE_ENV=production node ./dist/app.es.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2",
    "toastify-js": "^1.12.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@types/toastify-js": "^1.12.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.3",
    "eslint": "8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.0.0",
    "magic-string": "^0.30.10",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "prettier-plugin-ejs": "^1.0.3",
    "rollup-plugin-node-externals": "^7.1.2",
    "typescript": "^5.4.5",
    "typescript-eslint": "^7.11.0",
    "vite": "^5.2.11",
    "vite-node": "^1.6.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.5.3"
  }
}
