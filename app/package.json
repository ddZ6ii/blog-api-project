{
  "name": "blog-api-project",
  "private": true,
  "version": "1.0.0",
  "description": "Blog backend application",
  "author": "Denis Dezest <denis.dezest@gmail.com>",
  "repository": "git@github.com:ddZ6ii/blog-api-project.git",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev": "vite --host --open",
    "start": "cross-env NODE_ENV=production node ./dist/app.js",
    "build": "yarn run format:lint && vite build && yarn run minify:public && yarn run copy:views &&yarn run copy:assets",
    "preview": "concurrently \"cross-env NODE_ENV=production node ./dist/app.js\" \"vite preview --host --open\"",
    "build:preview": "yarn run build && yarn run preview",
    "format": "prettier --plugin=prettier-plugin-ejs --write .",
    "lint": "eslint --fix .",
    "format:lint": "yarn run format && yarn run lint",
    "minify:public": "yarn run minify:js && yarn run minify:css",
    "minify:js": "esbuild ./public/scripts/*.js --outdir=./dist/public/scripts/ --allow-overwrite --minify",
    "minify:css": "esbuild ./public/styles/*.css --outdir=./dist/public/styles/ --allow-overwrite --minify",
    "copy:views": "cp -R ./src/views ./dist/views",
    "copy:assets": "cp -R ./public/assets ./dist/public/assets"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.4.5",
    "ejs": "^3.1.9",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.0.2",
    "@eslint/js": "^9.0.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "esbuild": "^0.21.3",
    "eslint": "8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.0.0",
    "jsonc-eslint-parser": "^2.4.0",
    "path": "^0.12.7",
    "prettier": "^3.2.5",
    "prettier-plugin-ejs": "^1.0.3",
    "url": "^0.11.3",
    "vite": "^5.2.11",
    "vite-plugin-node": "^3.1.0",
    "vitest": "^1.5.3"
  }
}
