<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <link rel="stylesheet" href="/styles/main.css" />
    <script src="/scripts/main.js" defer></script>
  </head>
  <body>
    <div class="container">
      <header>
        <h1>My Blog</h1>
        <div class="header-actions">
          <a id="newPostBtn" href="/new">New Post</a>
          <form id="searchForm" method="post" action="/">
            <div class="searchForm-field">
              <input
                type="text"
                name="search"
                id="search"
                placeholder="Search posts..."
                value="<%= locals.filter ?? '' %>"
                aria-label="Search posts"
              />
              <button type="submit" class="searchForm-btn" aria-label="Search">
                <img
                  src="/assets/icons/search-icon.svg"
                  alt=""
                  width="18"
                  height="18"
                />
              </button>
            </div>
          </form>
        </div>
      </header>
      <% if (locals.posts.length > 0) { %>
      <ul id="postsList">
        <% posts.forEach(post=> { %>
        <li>
          <h2><%=post.title%></h2>
          <small> <%=post.date %> </small>
          <p><%=post.content%></p>
          <small
            >By:
            <%=post.author%>
          </small>
          <a class="edit" href="/edit/<%= post.id %>">Edit</a>
          <a class="delete" href="/api/posts/delete/<%= post.id %>">Delete</a>
        </li>
        <% }); %>
      </ul>
      <% } else { %>
      <% if (locals.filter) { %>
      <p>No results match your search criteria...</p>
      <% } else { %>
      <div>
        <p>No currently available posts...</p>
        <a href="/api/posts/reset" class="neutral-dark">Generate new posts</a>
      </div>
      <% }%>

      <% }%>
    </div>
  </body>
</html>
